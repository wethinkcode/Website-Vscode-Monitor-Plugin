{
  "name": "website-monitor-service",
  "displayName": "website-monitor-service",
  "description": "",
"  version": "v0.0.5",
  "engines": {
    "vscode": "^1.52.0"
  },
  "publisher": "WeThinkCode",
  "repository": {
    "url": "https://github.com/wethinkcode/Website-Vscode-Monitor-Plugin"
  },
  "author": {
    "name": "Julian Wolf"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:websiteStatus"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "websiteStatus.refreshEntry",
        "title": "Update"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "websiteStatus",
          "name": "Services Status"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "websiteStatus.refreshEntry",
          "when": "view == websiteStatus",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "WesitesToUse",
      "properties": {
        "WebsiteStatusUpdater.WebsitesToUse": {
          "type": "array",
          "default": [
            {
              "name": "google",
              "website": "https://google.com"
            }
          ],
          "description": "List of websites you want to track"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "copy-files": "cp resource /out"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "vsce": "^1.83.0"
  }
}
